
view {
    margin: 0rpx;
    box-sizing: border-box;
    
}

page {
    background: #F4F4F4;
    overflow-x: hidden;
    width: 100%;
    max-width: 750rpx;
    color: #333;
    font-size: 28rpx;
}

input {
    padding: 0;
    margin: 0;
    width: 100%;
    height: 100%;
}

image {
    width: 100%;
    height: 100%;
    display:block;
}

button {
    position: relative;
    display: block;
    margin: 0;
    padding: 0;
    box-sizing: box;
    font-size: 28rpx;
    text-align: center;
    text-decoration: none;
    line-height: 30rpx;
    border-radius: 0px;
    -webkit-tap-highlight-color: transparent;
    overflow: hidden;
    color: #000000;
    background-color: transparent;
}

button::after {
    content: " ";
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    border: 0px solid rgba(0, 0, 0, 0.2);
    -webkit-transform: scale(0);
    transform: scale(0);
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    box-sizing: border-box;
    border-radius: 0px;
}

.twoFontNow {
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.onFontNow {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}


