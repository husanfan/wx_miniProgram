.wx_main {
    position: absolute;
    width: 100%;
    height: 100%;
    max-width: 100vw;
}

.wx_toast {
    position: fixed;
    z-index: 999;
    width: 100%;
    top: 40%;
    text-align: center;
}

.wx_toast .contxt {
    display: inline-block;
    font-size: 14px;
    min-width: 60px;
    margin: auto;
    line-height: 1.6;
    background-color: rgba(0, 0, 0, 0.6);
    color: #fff;
    border-radius: 6rpx;
    animation: opacity 0.6s;
    -webkit-animation: opacity 0.6s;
    padding: 4px 6px;
}
.conment {
    width: 100vw;
    height: 100vh;
    overflow: hidden;
}
.maskBox {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    background: #000;
    opacity: .5;
    z-index: 100;
}


@keyframes opacity {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}